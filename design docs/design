MAIN LOOP
	get_input()
		
	switch (GAME_STATE)
		case GAME
			swtich (COMMAND)
			case LOOK
			case confirm
			case etc

		break;
		case inventory
		
		break;

	//update display
	switch (GAME_STATE)
		case GAME
			update game screen
		break;
		case inventory
			update inventory screen
		break;

END




